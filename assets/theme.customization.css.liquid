/**
 * Custom Style
 */

@font-face {
  font-family: "Frutiger Light";
  src: url("https://cdn.shopify.com/s/files/1/0066/7956/0310/files/Frutiger_Light.woff?v=1604992711");
  font-weight: lighter;
}

@font-face {
  font-family: "Frutiger Regular";
  src: url("https://cdn.shopify.com/s/files/1/0066/7956/0310/files/Frutiger_Regular.woff?v=1604992711");
  font-weight: normal;
}

@font-face {
  font-family: "Frutiger Bold";
  src: url("https://cdn.shopify.com/s/files/1/0066/7956/0310/files/Frutiger_Bold.woff?v=1604992711");
  font-weight: bold;
}

html:root {
  --typeHeaderPrimary: "Frutiger Light";
  --typeBasePrimary: "Frutiger Light";
  --typeHeaderWeight: 100;
  --typeBaseWeight: 100;
}

.hero__text-shadow {
  padding: 20px;
  border-radius: 5px;
}

.hero__text-inner {
  display: flex;
}

.hero_text-inner--img {
  margin-left: 20px;
}

.image-fit.hero__inner-image {
  width: unset;
  height: unset;
}

.hero_text-inner--cta {
  display: flex;
  flex-direction: column;
  justify-content: center;
  max-width: 840px;
}

.highlight {
  color: #e16616;
}
.type-advanced .promo-grid__content {
  max-width: 780px;
}

[data-type_product_capitalize="true"] .collection-item__title span {
  font-size: 20px !important;
}

.yotpo-main-widget {
  max-width: 1440px;
  margin: auto !important;
  margin-bottom: 50px !important;
}

/**
 * Hero Slider mobile
 */
@media (max-width: 677px) {
  .slideshow-wrapper .hero__text-inner {
    flex-wrap: wrap;
  }

  .slideshow-wrapper .hero_text-inner--cta {
    order: 1;
  }

  .hero_text-inner--img img {
    max-width: 200px;
    height: auto;
  }

  .background-media-text__inner .animation-cropper,
  .background-media-text__inner .animation-contents {
    width: 100%;
  }
}

#CollectionSection .grid-product__image-mask {
  height: 270px;
}

@media (max-width: 1199px) and (min-width: 1000px) {
  #CollectionSection .grid-product__image-mask {
    height: 250px;
  }
}

@media (max-width: 999px) and (min-width: 768px) {
  #CollectionSection .grid-product__image-mask {
    height: 220px;
  }
}

@media (max-width: 677px) {
  #CollectionSection .grid-product__image-mask {
    height: 220px;
  }
}

#CollectionSection .grid-product__image-mask .image-wrap {
  height: 100% !important;
  padding-bottom: 0 !important;
  display: flex;
}

#CollectionSection .grid-product__image-mask .image-wrap .grid-product__image {
  max-height: 100%;
  width: auto;
  margin: auto;
  animation: none;
  transition: none;
  opacity: 1;
}

.logo-bar__text {
  font-size: 20px;
  color: #003366;
  font-weight: bold;
  line-height: 1.2;
  margin-top: 10px;
}

.hero__top-subtitle {
  font-size: 1.2em;
}

.grid-product__image-mask .image-wrap {
  padding-bottom: 0 !important;
  height: unset !important;
  min-height: 320px;
}

.grid-product__image-mask .image-wrap img {
  max-height: 320px;
  width: unset;
}

.product__thumbs.product__thumbs--beside .slick-list {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.template-index .collection-image--square {
  padding-bottom: 80%;
}

.product__main-photos {
  border: 1px solid #000;
}

.product__main-photos img {
  display: block !important;
  max-width: unset;
  position: absolute;
}

.product__main-photos .slick-slider {
  pointer-events: none;
}

.product__main-photos .slick-slider,
.product__main-photos .slick-list,
.product__main-photos .slick-track,
.product__main-photos .slick-slide {
  height: 100%;
}

.product__main-photos .image-wrap {
  position: relative;
}

.product__main-photos .product-image-main {
  height: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.spr-starrating.spr-badge-starrating {
  line-height: 16px;
  margin-right: 10px;
}

.index-section--hero .video-parent-section.hero {
  height: 49vw;
  max-height: calc(100vh - 190px);
}

@media (max-width: 677px) {
  .index-section--hero .video-parent-section.hero {
    height: 50vw;
  }
}
